{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": false,
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": ["src"]
}
