{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./lib",
    "target": "ESNEXT",
    "module": "commonjs",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "declaration": true,
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": ["src"]
}
