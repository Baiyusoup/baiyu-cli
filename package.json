{
  "name": "baiyu-cli",
  "version": "1.0.4",
  "description": "个人自用的CLI工具",
  "repository": "https://github.com/Baiyusoup/baiyu-cli.git",
  "author": "Baiyusoup",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prepare": "bash prepare.sh",
    "preinstall": "npx only-allow pnpm",
    "ut": "node scripts/test.js",
    "build": "pnpm -C packages/cli build",
    "release": "node ./scripts/release.js",
    "lint": "npm run lint:eslint && npm run format",
    "lint:eslint": "eslint --fix --ext packages/*/src/**/*.{ts,js}",
    "format": "prettier --write \"packages/**/*.{js,ts}\"",
    "lint:commit": "commitlint -g ./commitlint.config.js -e",
    "commit": "cz"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@commitlint/cli": "^13.2.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "babel-jest": "^27.2.4",
    "chalk": "^4.1.2",
    "commitizen": "^4.2.4",
    "commitlint-config-ali": "^0.1.3",
    "conventional-changelog-cli": "^2.1.1",
    "enquirer": "^2.3.6",
    "eslint": "^7.15.0",
    "eslint-config-ali": "^12.2.2",
    "eslint-config-egg": "^9.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^5.1.1",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.0",
    "minimist": "^1.2.5",
    "prettier": "^2.4.1",
    "semver": "^7.3.5"
  }
}
