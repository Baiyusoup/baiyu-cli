    "babel-jest": "^27.2.4",
    "commitizen": "^4.2.4",
    "commitlint-config-ali": "^0.1.3",
    "conventional-changelog-cli": "^2.1.1",
    "eslint": "^7.15.0",
    "eslint-config-ali": "^12.2.2",
    "eslint-config-egg": "^9.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.4",
    "lint-staged": "^11.2.0",
    "minimist": "^1.2.5",
    "prettier": "^2.4.1"
